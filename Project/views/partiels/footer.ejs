<footer>
  <div class="container">
    <div class="footer-left">
      <div>
        <iframe
          width="500"
          height="300"
          frameborder="0"
          scrolling="no"
          marginheight="0"
          marginwidth="0"
          src="https://maps.google.com/maps?width=400&amp;height=400&amp;hl=en&amp;q=salk%C3%B6pr%C3%BC%20mahallesi%20a%C4%9Fbaba%20sitesi%20a1%20+(My%20Business%20Name)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"
          ><a href="https://www.maps.ie/distance-area-calculator.html"
            >area maps</a
          ></iframe
        >
      </div>
    </div>

    <div class="footer-right">
      <div>
        <div class="footer-container">
          <div class="footer-group">
            <h3>Contact</h3>
            <% contact.forEach(user => { %>
            <div class="footer-contact">
              <div class="footer-contact-address">
                <span><%= user.address %></span>
                <span><%= user.city %> / <%= user.country %></span>
              </div>
              <div>
               <a href="tel:+90<%= user.number %>"><span><%= user.number %></span></a>
              </div>
              <div>
                <a href="mailto:<%= user.mail %>"><span><%= user.mail %></span></a>
              </div>
            </div>
            <% }) %>
          </div>
          <div class="footer-group">
            <h3>Routes</h3>
            <ul>
              <% nav.forEach( navLink => { %>
              <li>
                <a href="<%=navLink.url%>"><span> <%= navLink.item %></span></a>
              </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
      <div class="term">
        <span> Â© <span id="term-policy"></span> Artefilex Inc. </span>
      </div>
    </div>
  </div>
</footer>
