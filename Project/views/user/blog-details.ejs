<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Ä°nterface</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <%- include('../partiels/navbar/nav.ejs',{nav}) %> 
   
    <div class="blog-detail">
      <div class="blog-detail-container">
        <div class="left">
          <div class="blog-area">
            <h2> <%= blog.title %></h2>
            <img src="/image/<%=blog.image%>" alt="" />
            <div>
              <p><%= blog.descr %></p>
            </div>
          </div>
        </div>
        <div class="right">
          <ul>
            <%blogs.forEach(item => { %>

            <li>
              <a href="/blogs/<%=item.blogid %>">
                <div class="another-blogs">
                    <img src="/image/<%=item.image%>" alt="" />
                    <span> <%= item.title %></span>
                  
                </div>
              </a>
            </li>

            <% }) %>
          </ul>
        </div>
      </div>
    </div>

    <%- include('../partiels/footer.ejs' ,{nav , contact}) %>

    <script src="../partiels/index.js"></script>
  </body>
</html>
