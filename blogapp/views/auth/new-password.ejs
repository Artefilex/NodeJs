<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
    <style>
      .ck-editor__editable_inline {
        height: 300px;
      }
    </style>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12">
          <% if (typeof  message!= "undefined") { %>
          <div class="alert alert-<%=message.class%>"> 
            <span> <%=message.text %></span>
          </div>
          <% } %>

          <form action="/account/new-password" class="mt-3" method="post">
            <input type="hidden" name="userId" value="<%=userId%>">
            <input type="hidden" name="token" value="<%=token%>">
            <div class="row mb-3">
              <label for="baslık" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-8">
                <input type="password" name="password" class="form-control" />
              </div>
            </div>
            <div class="row mb-3">
                <label for="baslık" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-8">
                  <input type="password" name="passCont" class="form-control" />
                </div>
              </div>
            <button type="submit" class="btn btn-primary">parola güncelle </button>
          </form>
        </div>
      </div>
    </div>
    <script src="https://cdn.ckeditor.com/ckeditor5/38.1.0/classic/ckeditor.js"></script>
  </body>
</html>