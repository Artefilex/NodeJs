<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
    <style>
      .ck-editor__editable_inline{
        height: 300px;
      }
    </style>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12">
          <!-- file yüklemesi yaparken multer yapıyoruz default olarak formdaki text verilerini alıyor -->
          <!-- hidden inputtan alamdıgımız csrftoken bilgilerini action içerisine parametre olarak gectik  -->
          <form
         
            class="mt-3"
            method="post"
            enctype="multipart/form-data"
          >
          
            <div class="row mb-3">
              <label for="baslık" class="col-sm-2 col-form-label">Baslık</label>
              <div class="col-sm-8">
                <input type="text" name="header" class="form-control" />
              </div>
            </div>
            <div class="row mb-3">
              <label for="baslık" class="col-sm-2 col-form-label">subtitle</label>
              <div class="col-sm-8">
                <input type="text" name="subtitle" class="form-control" />
              </div>
            </div>
            <div class="row mb-3">
              <label for="acıklama" class="col-sm-2 col-form-label"
                >Açıklama</label
              >
              <div class="col-sm-8">
                <textarea
                  id="editor"
                  name="desc"
                  class="form-control"
                  rows="10"
                ></textarea>
              </div>
            </div>
            <div class="row mb-3">
              <label for="resim" class="col-sm-2 col-form-label">Resim</label>
              <div class="col-sm-8">
                <input
                  type="file"
                  class="form-control"
                  name="image"
                  id="image"
                />
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-10 offset-sm-2">
                <div class="from-check">
                  <input
                    type="checkbox"
                    class="form-check-input"
                    type="checkbox"
                    name="main"
                    id="main"
                  />
                  <label class="form-check-label" for="main"> Ana sayfa </label>
                </div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-10 offset-sm-2">
                <div class="from-check">
                  <input
                    type="checkbox"
                    class="form-check-input"
                    type="checkbox"
                    name="onay"
                    id="onay"
                  />
                  <label class="form-check-label" for="onay"> Onay </label>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
          </form>
        </div>
      </div>
    </div>
    <script src="https://cdn.ckeditor.com/ckeditor5/38.1.0/classic/ckeditor.js"></script>
    <script>
      ClassicEditor.create(document.querySelector("#editor"))
        .then((editor) => {
          console.log(editor);
        })
        .catch((error) => {
          console.error(error);
        });
    </script>
  </body>
</html>
