<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
    <style>
      .ck-editor__editable_inline {
        height: 300px;
      }
    </style>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <form
          action=""
          class="mt-3 row"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="col-md-10">
            <input type="hidden" name="blogid" value="<%=blog.id%>" />
            <input type="hidden" name="image" value="<%=blog.image%>" />
            <div class="row mb-3">
              <label for="baslık" class="col-sm-1 col-form-label">Baslık</label>
              <div class="col-sm-11">
                <input
                  type="text"
                  name="header"
                  class="form-control"
                  value="<%=blog.title %>"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="baslık" class="col-sm-1 col-form-label"
                >subtitle</label
              >
              <div class="col-sm-11">
                <input
                  type="text"
                  name="subtitle"
                  class="form-control"
                  value="<%= blog.subtitle%>"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="acıklama" class="col-sm-1 col-form-label"
                >Açıklama</label
              >
              <div class="col-sm-11">
                <textarea
                  id="editor"
                  name="desc"
                  class="form-control"
                  rows="10"
                ><%-blog.desc %></textarea
                >
              </div>
            </div>
            <div class="row mb-3">
              <label for="resim" class="col-sm-1 col-form-label">Resim</label>
              <div class="col-sm-11">
                <img
                  src="/static/images/<%=blog.image%>"
                  alt=""
                  width="200px"
                />
                <input
                  type="file"
                  class="form-control"
                  name="image"
                  id="resim"
                />
              </div>

            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
          </div>
          <div class="col-md-2">
            <div class="row mb-3">
              <div class="col-sm-11 offset-sm-1">
                <div class="from-check">
                  <input type="checkbox" class="form-check-input"
                  type="checkbox" name="main" id="main" <%=blog.main
                  ?"checked":"" %> />
                  <label class="form-check-label" for="main"> Ana sayfa </label>
                </div>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-sm-11 offset-sm-1">
                <div class="from-check">
                  <input type="checkbox" class="form-check-input"
                  type="checkbox" name="onay" id="onay" <%=blog.confirmation
                  ?"checked":"" %> />
                  <label class="form-check-label" for="onay"> Onay </label>
                </div>
              </div>
            </div>
            <div class="row mb-3">
              <h4>Kategori</h4>
              <% categories.forEach(category =>{ %>
              <div class="from-check">
                <input 
                id="category_<%=category.id%>" 
                class="form-check-input"
                type="checkbox" 
                name="catagories[]" 
                <%=blog.categories.some(cat => cat.id == category.id) ?"checked" : "" %> 
                value = "<%=category.id %>"
                
                />
                <label class="form-check-label" for="category_<%=category.id%>">
                  <%=category.name %>
                </label>
              </div>

              <% }) %>
            </div>
          </div>
  
          
        </form>
      </div>
    </div>

    <script src="https://cdn.ckeditor.com/ckeditor5/38.1.0/classic/ckeditor.js"></script>
    <script>
      ClassicEditor.create(document.querySelector("#editor"))
        .then((editor) => {
          console.log(editor);
        })
        .catch((error) => {
          console.error(error);
        });
    </script>
  </body>
</html>
