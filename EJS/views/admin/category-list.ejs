<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <% if (action != "undefined" && action == "edit" ) { %>
             <div class="alert alert-success">
              <%= catid %> Numaralı Category Güncellendi.
             </div>
          
          <% }  if (action != "undefined" && action== "delete") { %>
            <div class="alert alert-danger">
              Blog Silindi.
            </div>
            <% } if (action != "undefined" && action== "create") { %>
              <div class="alert alert-warning">
                Blog Eklendi
              </div>
           <% } %>
            <table class="table table-border table-stript">
                <thead>
                    <tr>
                        <th style="width: 50px;">id</th>
                        <th >name</th>
                        <th style="width: 150px;" ></th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(cat => { %>
                         <tr>
                            <td><%= cat.dataValues.categoryid %></td>
                            <td><%= cat.dataValues.name %></td>
                            <td><a class="btn btn-sm btn-primary" href="/admin/category/<%=cat.dataValues.categoryid %>"> Edit </a></td>
                            <td><a class="btn btn-sm btn-danger" href="/admin/category/delete/<%=cat.dataValues.categoryid %>"> Delete </a></td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
      </div>
    </div>
  </body>
</html>