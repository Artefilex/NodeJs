<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12">
          <form action="" class="mt-3" method="post">
            <div class="row mb-3">
              <label for="baslık" class="col-sm-2 col-form-label">Baslık</label>
              <div class="col-sm-8">
                <input type="text" name="header" class="form-control" />
              </div>
            </div>
            <div class="row mb-3">
              <label for="acıklama" class="col-sm-2 col-form-label"
                >Açıklama</label
              >
              <div class="col-sm-8">
                <textarea
                  name="desc"
                  class="form-control"
                  rows="10"
                ></textarea>
              </div>
            </div>
            <div class="row mb-3">
              <label for="resim" class="col-sm-2 col-form-label">Resim</label>
              <div class="col-sm-8">
                <input
                  type="text"
                  class="form-control"
                  name="image"
                  id="resim"
                />
              </div>
            </div>
            <div class="row mb-3">
              <label for="category" class="col-sm-2 col-form-label"
                >Kategori</label
              >
              <div class="col-sm-8">
                <select name="category" id="category" class="form-select">
                  <option value="-1" selected>Seçiniz</option>
                  <% categories.forEach(category=> { %>
                  <option value="<%= category.catid %>">
                    <%= category.catname%>
                  </option>
                  <% }) %>
                </select>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-10 offset-sm-2">
                <div class="from-check">
                  <input
                    type="checkbox"
                    class="form-check-input"
                    type="checkbox"
                    name="main"
                    id="main"
                  />
                  <label class="form-check-label" for="main"> Ana sayfa </label>
                </div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-10 offset-sm-2">
                <div class="from-check">
                  <input
                    type="checkbox"
                    class="form-check-input"
                    type="checkbox"
                    name="onay"
                    id="onay"
                  />
                  <label class="form-check-label" for="onay"> Onay </label>
                </div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
